<h1>Marks</h1>

<div class="float-right mb-5">
  <%= link_to fa_icon("plus", text: "New mark"), new_mark_path, class: 'btn btn-primary btn-lg' %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr >
        <th class="text-center">
          Date
        </th>
        <th class="text-center">
          Time
        </th>
        <th class="text-center">
          Kind
        </th>
      </tr>
    </thead>
    <tbody>
      <% @marks.each do |mark| %>
        <tr>
          <td class="text-center">
            <%= mark.date.strftime('%d/%m/%Y') %>
          </td>
          <td class="text-center">
            <%= mark.time.strftime('%H:%M')%>
          </td>
          <td class="text-center">
            <%= mark.kind.titleize%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= paginate @marks %>
</div>
