<h1>Marks</h1>

<div class="float-right mb-5">
  <%= link_to fa_icon("plus", text: "New mark"), new_mark_path, class: 'btn btn-success btn-lg' %>
</div>

<div class="table-responsive">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th class="text-center">
          Date
        </th>
        <th class="text-center">
          E1
        </th>
        <th class="text-center">
          S1
        </th>
        <th class="text-center">
          E2
        </th>
        <th class="text-center">
          S2
        </th>
        <th>
          Total
        </th>
      </tr>
    </thead>
    <tbody>
      <% @marks.pluck(:date).uniq.each do |date| %>
        <tr>
          <td>
            <%= date.strftime('%d/%m/%Y') %>
          </td>
          <% @marks.where(date: date).each do |mark| %>
            <td>
              <%= mark.time.strftime('%H:%M') %>
            </td>
          <% end %>
          <td>
            <% times = @marks.where(date: date).pluck(:time) %>
            <% t1 = (times[1] - times[0]) / 1.hour %>
            <% t2 = (times[3] - times[2]) / 1.hour %>
            <%= t1 + t2 %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
